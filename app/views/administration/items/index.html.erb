<main class="content">
	<div class="container-fluid p-0">

		<h1 class="h3 mb-3">Items</h1>

		<div class="row">
			<div class="col-12">

				<div class="card">
					<div class="table-responsive">
						<table class="table table-striped table-hover">
							<thead>
								<tr>
									<th>Prix de d√©part</th>
									<th>Pourcentage de remise</th>
									<th>Prix</th>
									<th></th>
								</tr>
							</thead>
							<tbody>

								<% @items.each do |item| %>
								<tr>
									<td><%= item.original_price %></td>


						        <%= form_for [:administration, item] do |f| %>
						         <td>
						            <%= f.number_field :discount_percentage, class: 'form-control' %>
						         </td>

						          
						         <td>
						           <%= item.price.round(2) %>
						         </td>
						         <td>
						           <%= f.submit 'Modifier', class: 'btn btn-outline-dark' %>
						         </td>
						        <% end %>

								</tr>
								<% end %>

							</tbody>
						</table>
					</div>
				</div>

			</div>
		</div>

	</div>
</main>
